mixin navItem(target, title)
  li
    a(href=target) #{title}
    
mixin adminNav()
  li.dropdown-header Administrator Menu
  +navItem('/catalog/add', 'Add Schedule')
  li.divider
  +navItem('/credentials/add', 'Add User')
  +navItem('/credentials/deactivate', 'De-Activate User')
  block adminNav
  
mixin studentNav()
