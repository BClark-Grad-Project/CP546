// Begin Jade template.
extends layout

//-CSS is inserted in the HEAD tag.
block css
  link(rel='stylesheet', href='/css/register-form.css')
  
//-JavaScript will be inserted at the end of the BODY tag.
block js
  script(src='/js/register-form.js')
    
//-HTML content to display.
block content
  section#main.container
    .row
      //-Columns in a row must equal 12. 
      .col-xs-12.col-sm-12.col-md-12.col-lg-12      
        .panel.panel-default
          .panel-heading
            h4.panel-title
              | Apply for Fall 2014 Registration
          .panel-body
            form(role='form', method='POST', action='/credentials/create', id='register-form')
              h3 Applicant
              .input-group
                .input-group-addon First Name
                input.form-control(name='first_user', placeholder='', type='input', autofocus, required)
              br
              .input-group
                .input-group-addon Last Name
                input.form-control(name='last_user', placeholder='', type='input', required)
              br
              h4 Gender
              .input-group.col-xs-2.col-sm-2.col-md-2.col-lg-2
                .input-group-addon Sex  
                select.form-control(name='gender_user', placeholder='', type='input', required)
                  option(value='decline') Decline
                  option(value='male') Male
                  option(value='female') Female
              br
              h4 Age
              .input-group.col-xs-2.col-sm-2.col-md-2.col-lg-2
                .input-group-addon Birth
                input.form-control(name='birth_user', placeholder='', type='Date', required)
              br
              h3 Contact
              .input-group
                .input-group-addon Phone
                input.form-control(name='phone_user', placeholder='', type='tel', required)
              br 
              .input-group
                .input-group-addon Email  
                input.form-control(name='email_user', placeholder='', type='email', required)
              br                  
              h3 Permenent Address
